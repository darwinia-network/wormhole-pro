{
  "name": "wormhole",
  "version": "2.1.1",
  "private": true,
  "scripts": {
    "start": "PORT=3007 craco start",
    "start:dev": "PORT=3007 REACT_APP_HOST_TYPE=dev craco start",
    "build": "CI=false craco build --max_old_space_size=2048",
    "build:dev": "CI=false REACT_APP_HOST_TYPE=dev craco build --max_old_space_size=2048",
    "test:unit": "REACT_APP_HOST_TYPE=cy cypress open-ct",
    "test:e2e": "REACT_APP_HOST_TYPE=cy cypress open",
    "eject": "react-scripts eject",
    "stylelint": "stylelint \"src/**/*.scss\" --config stylelint.config.js",
    "i18next:scanner": "i18next-scanner --config i18next-scanner.config.js",
    "lint": "eslint ./src -c .eslintrc.js --fix",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s",
    "format": "prettier ./src/**/*.tsx  --write"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged && npm run lint && npm run stylelint",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "dependencies": {
